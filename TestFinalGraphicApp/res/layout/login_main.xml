<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE9A3"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/RelativeStartLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="56dp"
                android:layout_height="85dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/app_logo"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/signinEditPanel"
                android:layout_width="230dp"
                android:layout_height="185dp"
                android:layout_below="@+id/appLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/signinLoginEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:hint="Логин" >

                </EditText>

                <EditText
                    android:id="@+id/signinPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/signinLoginEditText"
                    android:layout_marginTop="10dp"
                    android:hint="Пароль"
                    android:inputType="textPassword" >

                </EditText>

                <Button
                    android:id="@+id/btnSignin"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/blue_rectangle"
                    android:text="Войти"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/signupEditPanel"
                android:layout_width="230dp"
                android:layout_height="335dp"
                android:layout_below="@+id/appLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-50dp"
                android:background="#fff"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/signupNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:hint="Твое имя"
                    android:inputType="textPersonName" >

                </EditText>

                <EditText
                    android:id="@+id/signupLoginEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/signupNameEditText"
                    android:layout_marginTop="10dp"
                    android:hint="Логин" >

                </EditText>

                <EditText
                    android:id="@+id/signupPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/signupLoginEditText"
                    android:layout_marginTop="10dp"
                    android:hint="Пароль"
                    android:inputType="textPassword" >

                </EditText>

                <RadioGroup
                    android:id="@+id/maleRegistrationRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/signupPasswordEditText"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/signupRadioMan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="М" />

                    <RadioButton
                        android:id="@+id/signupRadioWoman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ж" />
                </RadioGroup>

                <EditText
                    android:id="@+id/signupAgeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/maleRegistrationRadioGroup"
                    android:layout_marginTop="5dp"
                    android:hint="Когда ты родился?"
                    android:inputType="date" >

                </EditText>

                <Button
                    android:id="@+id/btnSignup"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/blue_rectangle"
                    android:text="Погнали"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/loginPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:clickable="false"
                android:orientation="vertical"
                android:visibility="gone" >

                <Button
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/red_rectangle"
                    android:text="LOGIN"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/signup"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/blue_rectangle"
                    android:text="SIGN UP"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>